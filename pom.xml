<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starters</artifactId>
		<version>1.4.0.M3</version>
	</parent>
	<artifactId>spring-boot-starter-hornetq-clustered</artifactId>
	<name>Spring Boot HornetQ Starter Clustered</name>
	<version>0.0.1-SNAPSHOT</version>
	<description>Starter for JMS messaging using clustered HornetQ</description>
	<url></url>
	<organization>
		<name>Foo, Inc.</name>
		<url>foo.io</url>
	</organization>
	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-hornetq</artifactId>
		</dependency>
		<!-- <dependency> <groupId>org.springframework</groupId> <artifactId>spring-jms</artifactId> 
			</dependency> <dependency> <groupId>org.hornetq</groupId> <artifactId>hornetq-jms-client</artifactId> 
			</dependency> -->
		<dependency>
			<groupId>com.google.guava</groupId>
			<artifactId>guava</artifactId>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<!-- <version>3.2</version> -->
				<executions>
					<execution>
						<id>default-compile</id>
						<phase>compile</phase>
						<goals>
							<goal>compile</goal>
						</goals>
						<configuration>
							<compilerVersion>1.8</compilerVersion>
							<source>1.8</source>
							<target>1.8</target>
							<debug>true</debug>
							<showDeprecation>true</showDeprecation>
							<showWarnings>true</showWarnings>
							<optimize>true</optimize>
							<encoding>UTF-8</encoding>
							<meminitial>512m</meminitial>
							<maxmem>4g</maxmem>
						</configuration>
					</execution>
					<execution>
						<id>default-testCompile</id>
						<phase>test-compile</phase>
						<goals>
							<goal>testCompile</goal>
						</goals>
						<configuration>
							<compilerVersion>1.8</compilerVersion>
							<source>1.8</source>
							<target>1.8</target>
							<debug>true</debug>
							<showDeprecation>true</showDeprecation>
							<showWarnings>true</showWarnings>
							<optimize>true</optimize>
							<encoding>UTF-8</encoding>
							<meminitial>512m</meminitial>
							<maxmem>4g</maxmem>
						</configuration>
					</execution>
				</executions>
				<configuration>
					<compilerVersion>1.8</compilerVersion>
					<source>1.8</source>
					<target>1.8</target>
					<debug>true</debug>
					<showDeprecation>true</showDeprecation>
					<showWarnings>true</showWarnings>
					<optimize>true</optimize>
					<encoding>UTF-8</encoding>
					<meminitial>512m</meminitial>
					<maxmem>4g</maxmem>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
